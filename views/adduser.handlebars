<h1 style='margin-top:120px'>

  Search users

</h1>

{{#if error}} <span> {{error}}</span> {{/if}}

<form style = 'margin-top : 20px' class = "form-inline my_form" method = "POST" action = "/user/add">

  <div class = "form-group">
    <label>ID:</label>
    <input type="text" name="id" class="form-control" placeholder="Add id">
  </div>

  <div class = "form-group">
    <label>FName:</label>
    <input type="text" name="FName" class="form-control" placeholder="Add id">
  </div>

  <div class = "form-group">
    <label>Last Name:</label>
    <input type="text" name="LName" class="form-control" placeholder="Add id">
  </div>

  <div class = "form-group">
    <label>Email:</label>
    <input type="text" name="email" class="form-control" placeholder="Add id">
  </div>

  <div class = "form-group">
    <label>Phone:</label>
    <input type="text" name="phone" class="form-control" placeholder="Add id">
  </div>

  <input type="submit" class="btn btn-primary" value="Save">

</form>
